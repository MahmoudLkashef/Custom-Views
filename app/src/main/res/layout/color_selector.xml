<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/left_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="14dp"
        android:src="@drawable/arrow_back_ios_24"/>

    <View
        android:id="@+id/selected_color"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_margin="14dp"
        />

    <ImageView
        android:id="@+id/right_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="14dp"
        android:src="@drawable/arrow_forward_ios_24"/>

    <CheckBox android:id="@+id/color_enabled"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        />
</merge>

    <!--Merge allow us to merge these view into the parent LinearLayout-->